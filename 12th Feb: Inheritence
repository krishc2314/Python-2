class Person:
    def __init__(self,age,name):
        self.age = age
        self.name = name

    def display_person(self):
        print(f'Name: {self.name} \nAge: {self.age}')

class Employee(Person):
    def __init__(self,age,name,salary,experience,employee_id):
        super().__init__(name,age)
        self.salary = salary
        self.experience = experience
        self.employee_id = employee_id

    def display_employee(self):
        self.display_person()
        print(f'Employee ID: {self.employee_id}\nSalary: {self.salary}\nExperience: {self.experience}')

class Manager(Employee):
    def __init__(self,name,age,employee_id,salary,experience,department):
        super().__init__(name,age,employee_id,salary,experience)
        self.department = department
    
    def display_manager(self):
        self.display_employee()
        print(f'Department: {self.department}')

manager1 = Manager('Krish',18,'ACX3YF',1000000,2,'Administration')
manager1.display_manager()

